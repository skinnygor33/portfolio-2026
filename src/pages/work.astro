<script is:inline>
  function scrollSlider(elementId, direction) {
    const container = document.getElementById(elementId);
    if (!container) return;
    const scrollAmount = 240; 
    if (direction === 'left') container.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
    else container.scrollBy({ left: scrollAmount, behavior: 'smooth' });
  }

  function setupInfinite(elementId, speed = 0.5) {
    const container = document.getElementById(elementId);
    if (!container || container.dataset.infiniteInit) return;
    container.dataset.infiniteInit = '1';

    const originalItems = Array.from(container.children);
    originalItems.forEach(item => {
      const clone = item.cloneNode(true);
      clone.setAttribute('aria-hidden', 'true');
      container.appendChild(clone);
    });

    let singleSetWidth = 0;
    setTimeout(() => { singleSetWidth = container.scrollWidth / 2; }, 50);

    let isHovered = false;
    const step = () => {
      if (!isHovered && singleSetWidth > 0) {
        container.scrollLeft += speed;
        if (container.scrollLeft >= singleSetWidth) container.scrollLeft -= singleSetWidth;
      }
      requestAnimationFrame(step);
    };
    step();

    container.addEventListener('mouseenter', () => isHovered = true);
    container.addEventListener('mouseleave', () => isHovered = false);
    container.addEventListener('touchstart', () => isHovered = true, { passive: true });
    container.addEventListener('touchend', () => isHovered = false);
  }

  function setupTimelineObserver() {
    if (document.body.dataset.timelineInit) return;
    document.body.dataset.timelineInit = '1';

    const timelineBlocks = document.querySelectorAll('.timeline-block');
    if (!timelineBlocks.length) return;

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.remove('opacity-20', 'scale-95', 'blur-sm');
          entry.target.classList.add('opacity-100', 'scale-100', 'blur-0');
        } else {
          entry.target.classList.add('opacity-20', 'scale-95', 'blur-sm');
          entry.target.classList.remove('opacity-100', 'scale-100', 'blur-0');
        }
      });
    }, { rootMargin: '-20% 0px -20% 0px', threshold: 0.2 });

    timelineBlocks.forEach(block => {
      block.classList.add('transform', 'scale-95', 'blur-sm', 'transition-all', 'duration-1000');
      observer.observe(block);
    });
  }

  // Simplified initialization - No more scroll-based background observer
  function init() {
    setupInfinite('soft-skills', 0.6);
    setupInfinite('hard-skills', 0.7);
    setupTimelineObserver();
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else init();
  document.addEventListener('astro:page-load', init);
</script>

